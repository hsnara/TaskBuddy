<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskBuddyAndroidApp.ServerPortPage"
             Title="Server Settings">
    <StackLayout Margin="20">
        <Label Text="Server Address:" />
        <Entry x:Name="serverAddressEntry" Text="{Binding ServerAddress}" />
        <Label Text="Server Port:" />
        <Entry x:Name="serverPortEntry" Text="{Binding ServerPort}" />
        <Button Text="Save" Clicked="OnSaveClicked" Margin="0,20,0,0" BackgroundColor="#2196F3" TextColor="White" />
    </StackLayout>
</ContentPage>
